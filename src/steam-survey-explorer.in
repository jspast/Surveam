#!@PYTHON@

import os
import sys
import signal
import locale
import gettext
from pathlib import Path
from platform import system

VERSION = "@VERSION@"

if os.name == "nt":
    PKGDATADIR = os.path.join(os.path.dirname(__file__), "..", "share", "steam-survey-explorer")
else:
    PKGDATADIR = "@pkgdatadir@"
    LOCALEDIR = "@localedir@"

sys.path.insert(1, PKGDATADIR)
signal.signal(signal.SIGINT, signal.SIG_DFL)

if system() == "Linux":
    locale.bindtextdomain("steam-survey-explorer", LOCALEDIR)
    locale.textdomain("steam-survey-explorer")
    gettext.install("steam-survey-explorer", LOCALEDIR)
else:
    gettext.install("steam-survey-explorer")

if __name__ == "__main__":
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(PKGDATADIR, "steam-survey-explorer.gresource"))
    resource._register()

    from steam_survey_explorer import main
    sys.exit(main.main(VERSION))